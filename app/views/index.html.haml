!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title RPS
    %link{:href => "/css/bootstrap.css", :rel => "stylesheet"}
    %link{:href => "/css/bootstrap-responsive.css", :rel => "stylesheet"}/
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
      .container
        %h2
          - throws.map do |x|
            %a{:href => "?choice=#{x}"} 
              - if ("#{x}" == 'rock')               
                %button.btn.btn-danger{type: "button"} Rock
              - elsif ("#{x}" == 'paper')
                %button.btn.btn-danger{type: "button"} Paper
              - elsif ("#{x}" == 'scissors')
                %button.btn.btn-danger{type: "button"} Scissors
        %h3= inicio
      .container
        %center 
          .row.span8
            - if (anwser == 'Empate')
              %h2 Jugadores Empatados
            - elsif (anwser == 'Ganar')
              %h2 Ganaste; #{player_throw} vence a #{computer_throw}.
            - elsif (anwser == 'Perder')
              %h2 Ouch Perdiste; #{computer_throw} vence a #{player_throw}.
           
    %script{:src => "/js/bootstrap.js"}
   
